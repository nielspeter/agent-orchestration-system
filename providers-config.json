{
  "$schema": "./providers-config.schema.json",

  "_comment": "This file configures all LLM providers and models. The defaultModel is used when no model is specified.",
  "defaultModel": "claude-3-5-haiku-latest",

  "_comment2": "The fallbackProvider is used when a model doesn't match any patterns or aliases",
  "fallbackProvider": "openrouter",

  "providers": {
    "anthropic": {
      "type": "native",
      "className": "AnthropicProvider",
      "apiKeyEnv": "ANTHROPIC_API_KEY",
      "models": [
        {
          "id": "claude-opus-4-1",
          "aliases": ["claude-opus-4-1", "opus"],
          "contextLength": 200000,
          "capabilities": ["chat", "functions", "vision", "caching"],
          "pricing": { "input": 0.015, "output": 0.075 }
        },
        {
          "id": "claude-sonnet-4-0",
          "aliases": ["claude-sonnet-4-0", "sonnet"],
          "contextLength": 200000,
          "capabilities": ["chat", "functions", "vision", "caching"],
          "pricing": { "input": 0.003, "output": 0.015 }
        },
        {
          "id": "claude-3-5-haiku-latest",
          "aliases": ["claude-3-5-haiku", "haiku"],
          "contextLength": 200000,
          "capabilities": ["chat", "functions", "vision", "caching"],
          "pricing": { "input": 0.0008, "output": 0.004 }
        }
      ]
    },
    "openrouter": {
      "type": "openai-compatible",
      "baseURL": "https://openrouter.ai/api/v1",
      "apiKeyEnv": "OPENROUTER_API_KEY",
      "dynamicModels": true,
      "models": [
        {
          "id": "*",
          "description": "OpenRouter supports 200+ models dynamically. Any model not matched by other providers will be routed here.",
          "examples": ["x-ai/grok-code-fast-1"]
        }
      ]
    }
  },
  "modelAliases": {
    "fast": "groq/llama-3.1-8b-instant",
    "cheap": "gpt-4o-mini",
    "smart": "claude-3-5-sonnet-latest",
    "sonnet": "claude-sonnet-4-0",
    "vision": "gpt-4o",
    "long": "gemini-1.5-pro",
    "reasoning": "o1-preview",
    "code": "x-ai/grok-code-fast-1"
  },
  "modelPatterns": [
    {
      "pattern": "^claude",
      "provider": "anthropic"
    },
    {
      "pattern": "^(gpt|o[0-9])",
      "provider": "openai"
    },
    {
      "pattern": "^gemini",
      "provider": "google"
    },
    {
      "pattern": "/",
      "provider": "openrouter",
      "description": "Any model with provider prefix defaults to OpenRouter"
    }
  ]
}
